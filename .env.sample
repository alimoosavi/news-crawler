# ---------------------------
# Selenium settings (lightweight)
# ---------------------------
SE_HUB_URL=http://localhost:4444/wd/hub
SE_DISPLAY=:99
SE_NODE_MAX_SESSIONS=4
SE_NODE_OVERRIDE_MAX_SESSIONS=true
SE_NODE_SESSION_TIMEOUT=300

# ---------------------------
# Application settings
# ---------------------------
APP_LOG_LEVEL=INFO
APP_DEBUG=false

# ---------------------------
# Laptop-Optimized Crawler Settings
# ---------------------------
CRAWLER_BULK_SIZE=10
CRAWLER_MAX_WORKERS=4
CRAWLER_SLEEP_INTERVAL=10
CRAWLER_MAX_RETRIES=3
CRAWLER_RETRY_DELAY=10

# ---------------------------
# Resource Optimization
# ---------------------------
ENABLE_CACHING=false
ENABLE_COMPRESSION=true
ENABLE_BATCH_PROCESSING=true
MEMORY_LIMIT=2GB

# ---------------------------
# Kafka and ZooKeeper Settings
# ---------------------------
# Use only the listener reachable from host
KAFKA_ADVERTISED_LISTENERS=PLAINTEXT://localhost:9092
KAFKA_BROKER_ID=1
KAFKA_OFFSETS_TOPIC_REPLICATION_FACTOR=1
KAFKA_TRANSACTION_STATE_LOG_MIN_ISR=1
KAFKA_TRANSACTION_STATE_LOG_REPLICATION_FACTOR=1
KAFKA_LISTENERS_PORT=9092
KAFKA_JMX_PORT=9101
KAFKA_NEWS_LINKS_TOPIC=news_links
KAFKA_NEWS_CONTENT_TOPIC=news_content
ZOOKEEPER_CLIENT_PORT=2181

# ---------------------------
# Kafka UI Settings
# ---------------------------
KAFKA_UI_PORT=8080
KAFKA_UI_CLUSTER_NAME=local
KAFKA_UI_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_UI_ZOOKEEPER=localhost:2181

# ---------------------------
# Redis Settings
# ---------------------------
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# ---------------------------
# Database Settings
# ---------------------------
DATABASE_HOST=localhost
DATABASE_PORT=5433
DATABASE_DB_NAME=news_crawler
DATABASE_USER=postgres
DATABASE_PASSWORD=password
DATABASE_MIN_CONN=5
DATABASE_MAX_CONN=20

# ---------------------------
# OpenAI Configuration
# ---------------------------
OPENAI_API_KEY=<sample_openai_api_key>

# ---------------------------
# Spark Settings
# ---------------------------
SPARK_VERSION=4.0.0
SPARK_MASTER_URL=spark://spark-master:7077
SPARK_WORKER_CORES=1
SPARK_WORKER_MEMORY=1G

# ---------------------------
# Hugging Face Settings
# ---------------------------
HUGGING_FACE_ACCESS_KEY=<sample_hugging_face_access_key>