# ==================================================================
# EMBEDDING CONFIGURATION (ONE-TIME CHOICE!)
# ==================================================================
# Choose ONE embedding provider and stick with it.
# Changing this later requires deleting all embeddings and re-embedding (8-10 hours).

# Provider: 'openai' or 'ollama'
EMBEDDING_PROVIDER=ollama

# --- OpenAI Settings (if EMBEDDING_PROVIDER=openai) ---
EMBEDDING_OPENAI_API_KEY=sk-your-openai-api-key-here
EMBEDDING_OPENAI_MODEL=text-embedding-3-small

# --- Ollama Settings (if EMBEDDING_PROVIDER=ollama) ---
EMBEDDING_OLLAMA_HOST=http://localhost:11434
EMBEDDING_OLLAMA_MODEL=bge-m3

EMBEDDING_MAX_CONCURRENT_REQUESTS=10
EMBEDDING_CHUNK_SIZE=5

# ==================================================================
# QDRANT VECTOR DATABASE
# ==================================================================
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_GRPC_PORT=6334
QDRANT_LOG_LEVEL=INFO
QDRANT_COLLECTION_NAME=news

# ==================================================================
# REDIS CACHE
# ==================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# ==================================================================
# REDPANDA (KAFKA)
# ==================================================================
REDPANDA_INTERNAL_PORT=9092
REDPANDA_EXTERNAL_PORT=19092
REDPANDA_NEWS_LINKS_TOPIC=news_links
REDPANDA_NEWS_CONTENT_TOPIC=news_contents

# ==================================================================
# POSTGRESQL DATABASE
# ==================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=news
POSTGRES_USER=news_user
POSTGRES_PASSWORD=news_password

# ==================================================================
# APPLICATION
# ==================================================================
APP_LOG_LEVEL=INFO
APP_DEBUG=false

# ==================================================================
# PROMETHEUS MONITORING
# ==================================================================
PROMETHEUS_PORT=9090
